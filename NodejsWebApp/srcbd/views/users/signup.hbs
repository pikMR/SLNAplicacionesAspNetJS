<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Cuenta de Registro
            </div>
            <div class="card-body">
                <form class="form-horizontal" role="form" action="/users/signup" method="POST">
                    <div class="form-group">
                        <label class="control-label" for="exampleInputNombre">Nombre</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="exampleInputNombre" placeholder="Tu nombre" name="nombre" value="{{nombre}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="exampleInputEmail">Email</label>
                        <div class="col-sm-10">
                            <input type="email" class="form-control" id="exampleInputEmail" placeholder="Escribe email" name="email" value="{{email}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="examplePassword">Contraseña</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="exampleInputPassword" placeholder="Escribe contraseña" name="pass" value="{{pass}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label" for="examplePasswordConfirm">Confirmar Contraseña</label>
                        <div class="col-sm-10">
                            <input type="password" class="form-control" id="exampleInputPasswordConfirm" placeholder="Reescribe contraseña" name="confirm" value="{{confirm}}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default">Registrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

